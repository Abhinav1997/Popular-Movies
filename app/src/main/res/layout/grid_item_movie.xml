<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_item_movie_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/movie_grid_padding"
    app:cardCornerRadius="@dimen/cardview_corner">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/grid_item_movie_poster"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/movie_poster" />

        <TextView
            android:id="@+id/grid_item_movie_name"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/blue_grey_700"
            android:padding="@dimen/movie_grid_textview_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_grid_textview_size" />

    </LinearLayout>

</android.support.v7.widget.CardView>